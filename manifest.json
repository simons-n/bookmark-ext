{
  "manifest_version": 2,
  "name": "Book Mk. 2",
  "description": "This extension provides more power and personalization
  for better bookmarks",
  "version": "0.4",
  "author": "Nick Simons",

  "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",

  "background": {
    "page": "./html/background.html"
  },

  "icons" : {
    "16": "./img/bkmk16.png",
    "48": "./img/bkmk48.png",
    "128": "./img/bkmk128.png"
  },

  "browser_action" : {
    "default_icon": {
      "16": "./img/bkmk16.png",
      "48": "./img/bkmk48.png",
      "128": "./img/bkmk128.png"
    },
    "default_title": "Mark this page",
    "default_popup": "./html/popup.html"
  },

  "permissions" : ["bookmarks", "storage", "identity", "identity.email", "activeTab", "alarms"]
}
